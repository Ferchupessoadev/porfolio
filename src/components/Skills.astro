---
import AstroIcon from "./icons/AstroIcon.astro";
import CssIcon from "./icons/CssIcon.astro";
import HTMLIcon from "./icons/HTMLIcon.astro";
import JsIcon from "./icons/JsIcon.astro";
import PHPIcon from "./icons/PHPIcon.astro";
import LaravelIcon from "./icons/LaravelIcon.astro";
---

<section id="skills" class="text-2xl p-3 w-full md:w-3/4 my-10">
    <h2
        class="skills-h2 text-lg sm:text-2xl md:text-3xl lg:text-4xl font-firaCode font-bold py-5"
    >
        &#60; Skills/&#62;
    </h2>
    <div
        class="flex flex-col lg:flex-row gap-5 items-center py-10 justify-center"
    >
        <HTMLIcon class="size-24" />
        <CssIcon class="size-24" />
        <JsIcon class="size-24" />
        <PHPIcon
            class="size-24 text-[rgb(0_0_0)] dark:text-[rgb(255_255_255)]"
        />
        <AstroIcon
            class="size-24 text-[rgb(0_0_0)] dark:text-[rgb(255_255_255)]"
        />
        <LaravelIcon class="size-24" />
    </div>
</section>

<style>
    .skills-h2 {
        background: linear-gradient(
            to right,
            #a02c59 0%,
            #c83873 5%,
            #3d51aa 10%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
